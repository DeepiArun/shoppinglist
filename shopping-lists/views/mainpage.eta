<% layout("./layouts/layout.eta") %>
        
<h1> Shared shopping lists</h1>

    <% if (it.flag) { %>
    <p>No shopping lists yet.</p>
    <% } 
    else 
    { %>
    <p>Shopping lists: <%= it.listCount %></p>
    <p>Shopping list items: <%= it.itemCount %></p>
    <% } %>
    <a href="/lists">View Lists</a>

